<%if @category %>
  <h1 align = "center"> <%= @cat_name %> </h1>
  <ul><% @posts.each do |post| %>
    <li><a href='/categories/<%= @cat_id%>/posts/<%=post.id%>'><%= post.title %></a>
    : <%= post.description %></li>
  <% end %>
  </ul>

  <a href = '/create/<%= @cat_id%>'><input type="submit" value="Create New Post!"></a>  
<% end %>
